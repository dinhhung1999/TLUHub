<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.navigationDrawer.qrCode.QrCodeFragment">
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:translationZ="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvAvatar"
            app:cardCornerRadius="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_40sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_220sdp">
            <ImageView
                android:id="@+id/imAvatarStudent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/lltt"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/cvAvatar"
            app:layout_constraintStart_toStartOf="@id/cvAvatar"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mã SV:"
                style="@style/textSyleWhiteH1"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Họ và tên:"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Ngày sinh:"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Giới tính:"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Lớp"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Ngành: "
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Khoa: "
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Quê quán: "
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/cvAvatar"
            app:layout_constraintStart_toEndOf="@+id/lltt"
            app:layout_constraintEnd_toEndOf="@id/cvAvatar"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCodeStudent"
                style="@style/textSyleWhiteH1"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvName"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvBirthDay"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvGender"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvClass"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvMajor"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvFaculty"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvHometown"
                style="@style/textSyleWhiteH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>