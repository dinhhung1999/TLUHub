<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user.UserFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInfo"
            android:background="@drawable/c"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvAvatar"
                app:cardCornerRadius="@dimen/_45sdp"
                android:elevation="@dimen/_3sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp">
                <ImageView
                    android:id="@+id/imAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvUserName"
                style="@style/textSyleWhiteH2"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/cvAvatar"
                app:layout_constraintStart_toStartOf="@id/cvAvatar"
                app:layout_constraintEnd_toEndOf="@+id/cvAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvMajorUser"
                android:layout_marginTop="@dimen/_5sdp"
                style="@style/textSyleWhiteH1"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                app:layout_constraintStart_toStartOf="@+id/tvUserName"
                app:layout_constraintEnd_toEndOf="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvFacultyUser"
                android:layout_marginTop="@dimen/_5sdp"
                style="@style/textSyleWhiteH1"
                android:paddingBottom="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvMajorUser"
                app:layout_constraintStart_toStartOf="@+id/tvMajorUser"
                app:layout_constraintEnd_toEndOf="@+id/tvMajorUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>